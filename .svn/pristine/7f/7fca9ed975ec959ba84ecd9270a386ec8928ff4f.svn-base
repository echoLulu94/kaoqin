@charset "utf-8";

/**public*/
*{padding:0;margin:0;}
ul{list-style: none;margin-bottom: 0;}
a:link{text-decoration: none;outline:none;}
a:visited{text-decoration: none;outline:none;}
a:hover{text-decoration: none;outline:none;}
a:active{text-decoration: none;outline:none;}
img {border: 0px;vertical-align:bottom;-ms-interpolation-mode: bicubic;}
.btn{background-color: #4990e2;height: 34px;padding:10px 12px;border-radius: 6px;text-align: center;color:white;border:none;outline: none;font-size:0.9rem;cursor: pointer;}

/**login*/
.box-one{width:100%;text-align:center;background-color: #808080;}
.box-one>span{height: 100%;display: inline-block;vertical-align: middle;}
.box-one>img{vertical-align: middle;}
.box-two{position:relative;text-align:center;background: url(../images/banner1.png) no-repeat;background-size: 100% 100%;}
.box-two>.heading{font-size: 1.8rem;color: #4990e2;padding:5% 0 15px 0;}
.box-two>.sub-heading{font-size: 0.9rem;color: white;}
.box-two>.btn-login{width: 100px;position: absolute;bottom:12%;margin-left: -50px;}
.box-three{background-color: #4990e2;}
.box-three>.box-list{width:800px;margin:0 auto;padding-top:30px;}
.box-three>.box-list>.box-list-div{width:33.33%;float:left;text-align: center;color: white;}
.box-three>.box-list>.box-list-div>.title{font-size: 1.3rem;line-height: 50px;margin-top: 30px;}
.box-three>.box-list>.box-list-div>.content{font-size: 0.9rem;}

.login-box{display:none;position:absolute;top:0;width:100%;height:100%;text-align:center;background:url(../images/msk.png)}
.login-box>.bod{margin:auto;width:360px;}
.login-box>.bod>.box{position:relative;float:left;width:100%;background:url("../images/msk.png");margin-top:120px;text-align:center;padding-bottom:50px;border-radius: 5px;}
.login-box>.bod>.box>.close{position: absolute;top:8px;right:10px;}
.login-box>.bod>.box>.tit{width:100%;float:left;padding-top:50px;padding-bottom:40px;}
.login-box>.bod>.box>.row{width:100%;float:left;padding-top:20px;color:#aaa;font-size:14px;}
.login-box>.bod>.box>.red {color:#ffcc00;}
.login-box>.bod>.box>.row>.txt {width:250px;color:#aaa;font-size:16px;border:0px;padding:10px;text-align:left;border-radius: 5px;}
.login-box>.bod>.box>.row>.txt:focus {outline:none;}
.login-box>.bod>.box>.row>.username{background:url(../images/user.png) no-repeat 240px 12px #fff;}
.login-box>.bod>.box>.row>.password{background:url(../images/password.png) no-repeat 240px 12px #fff;}
.login-box>.bod>.box>.row>.btn_log{width:270px;}
.login-box>.bod>.box>.row>.btn_log:active{-webkit-box-shadow:inset 0px 0px 0px rgba(0,0,0,0.45);-moz-box-shadow:inset 0px 0px 0px rgba(0,0,0,0.45);box-shadow:inset 0px 0px 0px rgba(0,0,0,0.45);}